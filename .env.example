# PostgreSQL Database Configuration
# Format: postgresql://username:password@host:port/database
PGDATABASE_URL=postgresql://calendar_user:your_password@localhost:5432/calendar

# Alternative variable name (used by drizzle-kit)
DATABASE_URL=postgresql://calendar_user:your_password@localhost:5432/calendar

# Application Port (default: 5002)
PORT=5002

# DingTalk API Configuration (Optional)
# Enable DingTalk SSO (set to "true" to enable, default is disabled)
ENABLE_DINGTALK_SSO=false

# DingTalk OAuth2 Configuration
# Get these values from your DingTalk app configuration
DINGTALK_APP_ID=your_dingtalk_app_id
DINGTALK_AGENT_ID=your_agent_id
DINGTALK_CLIENT_ID=your_client_id
DINGTALK_CLIENT_SECRET=your_client_secret
DINGTALK_CORP_ID=your_corp_id

# Session Secret (minimum 32 characters)
# Generate a secure random string for production
SESSION_SECRET=your_32_character_session_secret_key_here_change_in_production

# Storage Configuration
# Enable S3 storage for poster uploads (set to "true" to enable, default is local file storage)
# Local storage: Files saved to public/posters/ directory
# S3 storage: Files uploaded to AWS S3 bucket (requires AWS configuration below)
ENABLE_S3_STORAGE=false

# AWS S3 Configuration (Optional - Only needed if ENABLE_S3_STORAGE=true)
# Create an S3 bucket and IAM user with S3 PutObject/GetObject permissions
# Uncomment and set these values when ready to use S3 storage
# AWS_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# AWS_S3_BUCKET=calendar-events-posters
# AWS_S3_REGION=us-east-1
